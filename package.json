{
  "name": "medium-enhancer",
  "displayName": "Medium Enhancer",
  "version": "0.0.2",
  "description": "Enhance your Medium experience with features like TOC (Table of Contents) and RSS support.",
  "author": "Wesley Wei",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.89.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "mithril": "^2.0.4"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/mithril": "^2.0.8",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "commands": {
      "toggle": {
        "suggested_key": {
          "default": "Ctrl+Shift+E",
          "mac": "Command+Shift+E",
          "chromeos": "Ctrl+Shift+E",
          "linux": "Ctrl+Shift+E"
        },
        "description": "Load/unload TOC"
      },
      "prev": {
        "description": "Jump to previous heading"
      },
      "next": {
        "description": "Jump to next heading"
      }
    },
    "permissions": [
      "storage",
      "contextMenus",
      "scripting"
    ],
    "author": "cwei3790@gmail.com"
  }
}